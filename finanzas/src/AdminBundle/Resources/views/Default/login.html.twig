{% extends 'frontend.html.twig' %}

{% block id 'admin' %}

{% block nav %}
    <ul class="tipo-user navbar-nav navbar-right">
        <a href="{{ path('usuario_login') }}"><p class="navbar-text"><strong>{{ 'Usuario'|trans }}</strong></p></a>
    </ul>
{% endblock %}

{% block login %}

<div class="container" style="top:120px;">
    <div id="login" class="col-xs-6 col-sm-6 col-md-4 col-centered">
        <section id="entrar">
            <h3 id="title-login">{{ 'Ingreso de Administrador'|trans }}</h3>

            <form action="{{ path('admin_login_check') }}" method="post">
                {% if error %}
                    <div class="errores-globales">
                        <span class="label">ERROR</span> {{ error.message|trans }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Usuario" />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    </div>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="_password" placeholder="ContraseÃ±a"/>
                        <span class="input-group-addon"><span class="fa fa-key" aria-hidden="true"></span></span>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" type="submit" name="login">Login</button>
            </form>
        </section>
    </div>
</div>

{% endblock %}
