<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SigepBundle\Entity\Menu" table="menu">
    <indexes>
      <index name="padre" columns="padre"/>
      <index name="destino" columns="destino"/>
    </indexes>
    <id name="codigo" type="integer" column="codigo">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="150" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="nivel" type="integer" column="nivel" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="orden" type="integer" column="orden" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="imagen" type="string" column="imagen" length="100" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <many-to-one field="destino" target-entity="Destinos" fetch="LAZY">
      <join-columns>
        <join-column name="destino" referenced-column-name="codigo"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="padre" target-entity="Menu" fetch="LAZY">
      <join-columns>
        <join-column name="padre" referenced-column-name="codigo"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
