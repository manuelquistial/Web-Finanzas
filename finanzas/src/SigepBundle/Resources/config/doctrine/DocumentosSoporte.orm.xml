<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SigepBundle\Entity\DocumentosSoporte" table="documentos_soporte">
    <indexes>
      <index name="tipo_documento" columns="tipo_documento"/>
      <index name="codigo_operacion" columns="codigo_operacion"/>
    </indexes>
    <id name="codigo" type="integer" column="codigo">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="numeroDocumento" type="string" column="numero_documento" length="20" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="descripcion" type="text" column="descripcion" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="codigoOperacion" type="integer" column="codigo_operacion" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="nombre" type="string" column="nombre" length="200" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="documento" type="blob" column="documento" length="16777215" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="tipoDocumento" target-entity="TiposSoporte" fetch="LAZY">
      <join-columns>
        <join-column name="tipo_documento" referenced-column-name="Codigo"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
