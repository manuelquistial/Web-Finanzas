<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SigepBundle\Entity\Personas" table="personas">
    <id name="identificacion" type="string" column="Identificacion" length="15">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="tipo" type="integer" column="tipo" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="nombre" type="string" column="Nombre" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="Email" length="250" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="direccion" type="string" column="Direccion" length="250" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="telefono1" type="string" column="Telefono1" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="telefono2" type="string" column="Telefono2" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="sexo" type="string" column="Sexo" length="1" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <many-to-many field="propuesta" target-entity="Propuestas" inversed-by="persona" fetch="LAZY">
      <join-table name="autores_propuesta">
        <join-columns>
          <join-column name="persona" referenced-column-name="Identificacion"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="propuesta" referenced-column-name="codigo"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="empresa" target-entity="Personas" mapped-by="persona" fetch="LAZY"/>
    <many-to-many field="proyecto" target-entity="Proyectos" mapped-by="persona" fetch="LAZY"/>
    <many-to-many field="capacitacion" target-entity="IndicadoresCapacitaciones" mapped-by="participante" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
