<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SigepBundle\Entity\Usuarios" table="usuarios">
    <id name="persona" association-key="true"/>
    <field name="clave" type="string" column="clave" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <one-to-one field="persona" target-entity="Personas" fetch="LAZY">
      <join-columns>
        <join-column name="persona" referenced-column-name="Identificacion"/>
      </join-columns>
    </one-to-one>
    <many-to-many field="centroCosto" target-entity="CentrosCosto" inversed-by="usuario" fetch="LAZY">
      <join-table name="centro_costo_usuario">
        <join-columns>
          <join-column name="Usuario" referenced-column-name="persona"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="Centro_costo" referenced-column-name="Codigo"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="perfil" target-entity="Perfiles" inversed-by="usuario" fetch="LAZY">
      <join-table name="perfiles_usuario">
        <join-columns>
          <join-column name="usuario" referenced-column-name="persona"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="perfil" referenced-column-name="codigo"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="tipoSoporte" target-entity="TiposSoporte" inversed-by="usuario" fetch="LAZY">
      <join-table name="tipo_soporte_usuario">
        <join-columns>
          <join-column name="Usuario" referenced-column-name="persona"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="Tipo_soporte" referenced-column-name="Codigo"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
