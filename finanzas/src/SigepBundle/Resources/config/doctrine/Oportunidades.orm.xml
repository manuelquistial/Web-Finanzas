<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SigepBundle\Entity\Oportunidades" table="oportunidades">
    <indexes>
      <index name="FK_oportunidades_ubicaciones" columns="ciudad"/>
      <index name="FK_oportunidades_modalidades" columns="modalidad"/>
      <index name="FK_oportunidades_areas" columns="tipo_proyecto"/>
      <index name="FK_oportunidades_personas" columns="empresa"/>
    </indexes>
    <id name="codigo" type="integer" column="codigo">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="registro" type="date" column="registro" nullable="false"/>
    <field name="apertura" type="date" column="apertura" nullable="false"/>
    <field name="entrega" type="date" column="entrega" nullable="true"/>
    <field name="plazo" type="date" column="plazo" nullable="false"/>
    <field name="realizada" type="string" column="realizada" length="1" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="causaNoRealizada" type="text" column="causa_no_realizada" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="modalidad" target-entity="Modalidades" fetch="LAZY">
      <join-columns>
        <join-column name="modalidad" referenced-column-name="codigo"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="empresa" target-entity="Personas" fetch="LAZY">
      <join-columns>
        <join-column name="empresa" referenced-column-name="Identificacion"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="tipoProyecto" target-entity="TiposProyecto" fetch="LAZY">
      <join-columns>
        <join-column name="tipo_proyecto" referenced-column-name="Codigo"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="ciudad" target-entity="Ubicaciones" fetch="LAZY">
      <join-columns>
        <join-column name="ciudad" referenced-column-name="codigo"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
